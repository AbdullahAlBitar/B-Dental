datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model patient {
  id         Int         @id @default(autoincrement())
  name       String
  phone      String      @unique
  birth      DateTime
  sex        String
  status     pStatus     @default(Active)
  payments   Payment[]
  visits     visit[]
  Casephotos Casephoto[]
  createdAt  DateTime    @default(now())
}

model Doctor {
  id        Int       @id @default(autoincrement())
  name      String
  phone     String    @unique
  password  String
  payments  Payment[]
  visits    visit[]
  createdAt DateTime  @default(now())
}

model Payment {
  id         Int       @id @default(autoincrement())
  patient_id Int   
  doctor_id  Int   
  amount     Float
  date       DateTime @default(now())
  patient    patient  @relation(fields: [patient_id], references: [id])
  Doctor     Doctor   @relation(fields: [doctor_id], references: [id])
  createdAt  DateTime @default(now())
}

model visit {
  id          Int       @id @default(autoincrement())
  name        String
  date        DateTime  @default(now())
  doctor_id   Int
  patient_id  Int
  description String
  charge      Float
  patient     patient     @relation(fields: [patient_id], references: [id])
  Doctor      Doctor      @relation(fields: [doctor_id], references: [id])
  Casephotos  Casephoto[]
  createdAt   DateTime    @default(now())
}

model Casephoto {
  id         Int       @id @default(autoincrement())
  patient_id Int
  visit_id   Int
  type       cpType
  imageUrl   String
  date       DateTime @default(now())
  patient    patient  @relation(fields: [patient_id], references: [id])
  visit      visit    @relation(fields: [visit_id], references: [id])
  createdAt  DateTime @default(now())
}

enum cpType {
  IntraOral
  ExtraOral
  XRay
}

enum pStatus {
  Active
  Deleted
}